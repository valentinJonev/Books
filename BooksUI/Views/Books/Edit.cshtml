@model Book
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/_Layout.cshtml";
}

<h2>Edit @Model.Name book</h2>

@using (Html.BeginForm(MVC.Books.Edit(), FormMethod.Post, new { @class = "form-horizontal col-sm-3", enctype = "multipart/form-data", id = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Cover)
        @Html.TextBoxFor(m => m.Cover, new { type = "file" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.HiddenFor(m => m.Name)
        @Html.DisplayFor(m => m.Name, new { @class = "form-control-static" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PublishDate)
        @Html.TextBoxFor(m => m.PublishDate, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.AuthorId)
        <select name="AuthorId" class="form-control">
            <option value="0">Terry Pratchett</option>
            <option value="1">Douglas Adams</option>
            <option value="2">J. K. Rowling</option>
            <option value="3">J.R.R. Tolkien</option>
        </select>
    </div>
    <input type="submit" value="Update" onclick="document.getElementById('form').submit()" class="btn btn-default">
}

