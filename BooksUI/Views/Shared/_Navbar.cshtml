@{
    var user = Session["User"] as User;
}

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Books", MVC.Home.Index(), new { @class="navbar-brand" })
        </div>
            @if (user != null)
            {
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <p class="navbar-text">Welcome @user.Username</p>
                    @if (ViewBag.Title == "Books")
                    {
                        <form class="navbar-form clearfix" style="display:inline-block">
                            <div class="form-group">
                                <input type="text" class="form-control" name="Title" id="Title" placeholder="Search by title">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="Author" id="Author" placeholder="Search by author">
                            </div>
                            <button type="button" onclick="search('submit')" class="btn btn-default">Search</button>
                            <button type="reset" onclick="search('clear')" class="btn btn-default">Clear</button>
                        </form>
                    }
                    @using (Html.BeginForm(MVC.User.Logout(), FormMethod.Post, new { @class = "navbar-form navbar-right" }))
                    {
                        <button class="btn btn-default" type="submit"> Logout </button>
                    }
</div>
            }
           
    </div>
</nav>
